# Copy this file to .env and update with your actual values

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# WhatsApp chat ID - you'll get this when you first run the bot
# Examples:
# For a contact: +1234567890@c.us
# For a group: 1234567890-1234567890@g.us
TARGET_CHAT_ID=

# Joke interval in milliseconds
# 2 hours = 7200000 ms
# 1 hour = 3600000 ms
# 30 minutes = 1800000 ms
# 10 minutes = 600000 ms (for testing)
JOKE_INTERVAL=7200000

# Contextual jokes based on chat history (true/false)
# When enabled, the bot will read recent messages and create jokes about them
USE_CONTEXTUAL_JOKES=true

# Number of recent messages to use for context (when contextual jokes are enabled)
# Use a number (e.g., 20) for specific limit, or "ALL" to read entire chat history
CHAT_HISTORY_LIMIT=ALL
DEBUG_MODE=true